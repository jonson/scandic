<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.dajodi.scandic"
      android:versionCode="3" android:versionName="1.0.2">
	
    <application android:label="@string/app_name"
    			android:theme="@style/ScandicTheme" 
    			android:icon="@drawable/ic_launcher"
    			android:debuggable="false">
        <activity android:name=".MemberDetailsActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".SettingsActivity" android:launchMode="singleTop"></activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk android:targetSdkVersion="4" android:minSdkVersion="4"></uses-sdk>
    
    <supports-screens android:normalScreens="true" android:smallScreens="true" android:anyDensity="true" android:resizeable="false" android:largeScreens="true"></supports-screens>
</manifest>