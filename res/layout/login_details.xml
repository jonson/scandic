<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/loginLayout" android:padding="10dp">
    

<TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:text="@string/login.freqguest" android:layout_width="wrap_content" style="@style/TextMediumGrey"></TextView>
<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="vertical" android:padding="10dp" android:background="@drawable/userpass_background" android:layout_marginTop="10dp">
    <EditText android:layout_height="wrap_content" android:id="@+id/txtUsername" android:layout_width="fill_parent" android:inputType="text" android:hint="@string/login.username"></EditText>
    <EditText android:layout_height="wrap_content" android:id="@+id/txtPassword" android:layout_width="fill_parent" android:inputType="textPassword" android:hint="@string/login.password"></EditText>
    <Button android:layout_gravity="right" android:layout_height="wrap_content" android:paddingLeft="50dp" android:layout_width="wrap_content" android:paddingRight="50dp" android:text="@string/login.login" android:focusable="true" android:id="@+id/loginButton"></Button>
</LinearLayout>
</LinearLayout>